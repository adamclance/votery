<% layout('layout') -%>

<div class="grid-x">
    <h1 class="cell small-12">Create ballot</h1>

    <form class="create-ballot-form" method="POST" action="/ballots/create" data-abide novalidate>
        <div data-abide-error class="alert callout" style="display: none;">
            <p><i class="fi-alert"></i> There are some errors in your form.</p>
        </div>

        <div class="grid-container">
            <div class="grid-x grid-padding-x">
                <div class="small-12 cell">
                    <label>Name
                        <input name="name" type="text" placeholder="Name" required>
                        <span class="form-error">Name is required.</span>                                             
                    </label>
                </div>

                <div class="small-12 cell">
                    <label>Description
                        <textarea name="description" required></textarea>
                        <span class="form-error">Description is required.</span>                                             
                    </label>
                </div>                                
                
                <div class="small-12 cell type-container">
                    <label>Type
                        <select name="type" class="type">
                            <option value="ranked">Ranked</option>
                            <option value="pick-two">Pick Two</option>  
                            <option value="simple">Simple</option>                                
                        </select>                                             
                    </label>
                </div>

                <div class="small-12 cell options-container">
                    <label class="options">Options
                        <input name="options" type="text" placeholder="option" required>
                        <span class="form-error">Option is required.</span>
                        <input name="options" type="text" placeholder="option" required>
                        <span class="form-error">Option is required.</span>                                             
                    </label>

                    <a class="button add-option">ADD OPTION</a>
                    <a class="button remove-option" disabled>REMOVE OPTION</a>
                </div>

                <div class="small-12 cell">
                    <label>Container
                        <select name="container">
                            <option value="federal">Federal</option>
                            <option value="county">County</option>
                        </select>                                             
                    </label>
                </div>

                <div class="small-12 cell">
                    <input type="submit" class="button expanded" value="CREATE BALLOT">                                    
                </div>
            </div>
        </div>
    </form>
</div>