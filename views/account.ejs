<% layout('layout') -%>

<div class="card account-card">
    <div class="card-divider">
        Account information
    </div>

    <table class="hover striped stack">
        <thead>
            <tr>
                <th>UUID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>State</th>
                <th>City</th>
                <th>Zipcode</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.username %>
                </td>
                <td>
                    <%= user.firstName %>
                </td>
                <td>
                    <%= user.lastName %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.residence.state %>
                </td>
                <td>
                    <%= user.residence.city %>
                </td>
                <td>
                    <%= user.residence.zip %>
                </td>
            </tr>
        </tbody>
    </table>
</div>
