<% layout('layout') -%>

<% var disabledClass = '' %>

<% if (alreadyVoted) { %>
    <% disabledClass = 'disabled' %>
    <div class="callout alert">
        <h5>You already casted your vote for this ballot!</h5>
        <a href="/">Go back home.</a>
    </div>
<% } %>

<div class="card">
    <div class="card-divider">
        <%= ballot.name %>
    </div>

    <div class="card-section">
        <%= ballot.description %> <br/><br/>
        Drag and drop each candidate to your desired rank.
    </div>

    <div class="card-section">
        <ol id="rankedBallotSort" class="rankedBallotSort" data-ballot-id="<%= ballotId %>">
            <% for (var i = 0; i < ballot.options.length; i++) { %>
                <li class="rankedBallotSort-choice">
                    <%= ballot.options[i].name %>
                </li>
            <% } %>
        </ol>
    </div>

    <div class="card-section input-group">
        <input class="candidate-add-input input-group-field" placeholder="Write in candidate" type="text" />
        <div class="input-group-button">
            <a class="candidate-add-button button <%= disabledClass %>">Add</a>
        </div>
    </div>

    <div class="card-section">
        <a class="ranked-ballot-submit button expanded  <%= disabledClass %>">SUBMIT BALLOT</a>
    </div>
</div>