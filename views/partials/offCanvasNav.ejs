<!-- Menu -->
<ul class="vertical menu">
    <li class="side-menu-item">
        <a href="/"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
    </li>
    <% if(user) { %>
        <li class="side-menu-item">
            <a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
        </li class="side-menu-item">
        <li>
            <a href="/account"><i class="fa fa-user-circle" aria-hidden="true"></i> Account</a>
        </li>
    <% } else { %>
        <li class="side-menu-item">
            <a data-open="loginModal"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</a>
        </li>
        <li class="side-menu-item">
            <a data-open="registerModal"><i class="fa fa-user-plus" aria-hidden="true"></i> Register</a>
        </li>
    <% } %>

    <li class="side-menu-item">
        <a href="/ballots"><i class="fa fa-tasks" aria-hidden="true"></i> Ballots</a>
    </li>

    <!-- Admin links -->
    <% if (user && user.role === 'admin') { %>
        <li>
            <a href="/ballots/manage"><i class="fa fa-file" aria-hidden="true"></i> Manage ballots</a>
        </li>
        <li>
            <a href="/ballots/create"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add ballot</a>
        </li>
    <% } %>
</ul>